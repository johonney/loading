	<link rel="stylesheet" href="">
	<style>
	*{
		margin:0px;
		padding: 0px;
	}
	.processbar{
		width: 460px;
		height:30px;
		position: relative;
		margin:100px auto;
	}
	.bar{
		width:300px;
		height: 30px;
		background: url(g:/images/2.png) no-repeat center;
		float: left;
		margin-top: 4px;
		overflow: hidden;
	}
	.fire{
		float: left;
		display: none;
	}
	.section2{
		margin: 100px 600px;
	}
	</style>
	<script src='http://cdn.bootcss.com/jquery/2.2.4/jquery.min.js'></script>
	<script>
	$(function(){
		var time = 30,timer;
		$('#btn').click(function(){
			$('.fire').css('display','block');
			function countdown(){
				time--;
				var bar = $('.bar').width();
				var each = bar/30;
				bar-= each;
				$('.bar').width(bar);
				if(time==0){
					// $('.bar,.fire').css('opacity','0');
					timer = clearInterval(timer);
				}
				$('.time').html(time+'s');
			}
			$('.fire').css('display','block');
			var timer = setInterval(countdown,1000);
			return true;
		})
	})
	</script>
